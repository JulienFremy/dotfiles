{
    "editor.tabSize": 2,
    "php.executablePath": "/usr/local/bin/php",
    "php.suggest.basic": false,
    "editor.renderWhitespace": "all",
    "editor.detectIndentation": false,
    "window.zoomLevel": 0,
    "cmake.configureOnOpen": false,
    "[php]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "files.eol": "\n",
    "window.autoDetectColorScheme": true,
    "launch" : {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Listen for XDebug",
                "type": "php",
                "request": "launch",
                "port": 9000,
                "pathMappings": {
                    "/var/www/html": "${workspaceFolder}/common/cloud",
                    "/var/www/dev": "/Users/jfremy/cloud_tests/dev/common/cloud",
                    "/var/www/prod": "/Users/jfremy/cloud_tests/prod/common/cloud",
                },
            },
            {
                "name": "Listen for XDebug local",
                "type": "php",
                "request": "launch",
                "port": 9000,
            },
            {
                "name": "Launch currently open script",
                "type": "php",
                "request": "launch",
                "program": "${file}",
                "cwd": "${fileDirname}",
                "port": 9000
            }
        ]
    },
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.compare.location": "scm",
    "gitlens.views.search.location": "scm",
    "phpunit.args": [

        "--bootstrap", "/Users/jfremy/sdks/phpunit/vendor/autoload.php", "-c", "${workspaceFolder}/common/cloud/phpunit.xml"
    ],
    "phpunit.phpunit": "/Users/jfremy/sdks/phpunit/vendor/bin/phpunit",
    "workbench.colorTheme": "Default High Contrast",
}
