[credential]
	helper = osxkeychain
[tig]
        main-view-date = custom
        main-view-date-format = "%Y-%m-%d %H:%M"
        main-view = id:yes author:abbreviated date commit-title

[merge]
	tool = opendiff
[alias]
        plog = log --graph --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset'
        co = checkout
        sup = submodule update
        supr = submodule update --init --recursive
        cp = cherry-pick
##        branch-hof = for-each-ref --shell --format="printf '\''%%30s %%40s %%25s\n'\'' %(authorname) %(refname:short) %(committerdate:relative)" --sort=committerdate refs/remotes/origin
        fa = fetch --all -p
# list branches
        lb = for-each-ref --count 6 --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
        lb-all = for-each-ref --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
        cm = commit

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
